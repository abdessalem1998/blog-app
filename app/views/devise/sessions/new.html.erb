<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'flex flex-col') do |f| %>
  <div class="field mb-2">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-transparent w-full ", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: "bg-transparent w-full", placeholder: "Password"  %>
  </div>


  <div class="actions mt-2">
    <%= f.submit "Log in", class: 'bg-white text-black	cursor-pointer w-full p-2'%>
  </div>
<% end %>

<%= render "devise/shared/links"%>
