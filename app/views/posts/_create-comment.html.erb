<%= form_with model: comment, url: user_post_comments_path(post_id: params[:id]), html: { class: 'flex flex-col items-start w-full gap-4' } do |form| %>
  <%= form.text_area :text, class: 'bg-transparent w-full max-w-xl border-2 border-white rounded-xl focus:shadow-none focus:border-white', placeholder: 'Your comment...', required: true, rows: 3%>
  <%= form.submit "Comment", class: 'hover:underline cursor-pointer' %>
<% end %>